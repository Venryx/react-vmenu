{
    "compilerOptions": {
		// general
        "sourceMap": true,
		"watch": true,

		// modules/paths
		"moduleResolution": "node",
		//"maxNodeModulesJsDepth": 1,
        "rootDir": "src",
		//"outDir": "Build",
		"baseUrl": "src",

		// compiler options
		"target": "es2015",
        "allowJs": true,
		"jsx": "react",
        "noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
    },
	"files": ["src/VMenu.tsx"],
    "include": [
        "Typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
		"node_modules"
    ],
	"compileOnSave": true
}